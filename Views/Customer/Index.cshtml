<script src="~/website/vendor/daterangepicker/moment.min.js"></script>
<script src="~/website/vendor/daterangepicker/daterangepicker.js"></script>
<!--===============================================================================================-->
<script src="~/website/vendor/slick/slick.min.js"></script>
<script src="~/website/js/slick-custom.js"></script>
<!--===============================================================================================-->
<script src="~/website/vendor/parallax100/parallax100.js"></script>
<script>
    $('.parallax100').parallax100();
</script>
<!--===============================================================================================-->
<script src="~/website/vendor/MagnificPopup/jquery.magnific-popup.min.js"></script>
<script src="~/website/vendor/perfect-scrollbar/perfect-scrollbar.min.js"></script>

<script src="~/website/js/main.js"></script>
</html>
