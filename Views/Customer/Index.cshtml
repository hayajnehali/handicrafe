@model handicrafe.Models.Handicraft

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="icon" type="image/png" href="~/website/images/icons/favicon.png" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/website/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/website/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/website/fonts/iconic/css/material-design-iconic-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/website/fonts/linearicons-v1.0.0/icon-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/website/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/website/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/website/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/website/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/website/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/website/vendor/slick/slick.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/website/vendor/MagnificPopup/magnific-popup.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/website/vendor/perfect-scrollbar/perfect-scrollbar.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/website/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/website/css/main.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

</head>
<body>

    <a asp-action="Firstpage" asp-controller="Website" style="position: absolute;right: 43px;z-index:3;  box-shadow: rgb(17 17 26 / 10%) 0px 4px 16px, rgb(17 17 26 / 5%) 0px 8px 32px;
    padding: 8px 25px; top: 25px; color: black; background-color: #f6f6f6;">Back</a>
    <div style="box-shadow: rgba(17, 17, 26, 0.1) 0px 1px 0px, rgba(17, 17, 26, 0.1) 0px 8px 24px, rgba(17, 17, 26, 0.1) 0px 16px 48px;;width: 1400px;  background-color: #ececec;  height: 1400px; transform: translate(-285px, -877px);  border-radius: 50%; z-index: 0;  position: absolute; margin: -100px;">

    </div>
    <div style=" margin: 5rem 9rem;;z-index:1;
    background-color: #dadada ; border-radius: 13px;box-shadow: rgb(0 0 0 / 10%) 0px 0px 5px 0px, rgb(0 0 0 / 10%) 0px 0px 1px 0px;">
    
    <div class="row">
            <div class="col-xl-6 col-sm-12" style="height:447px;">
            <img src=@Url.Content("~/image/"+ Model.Image) style="width:100%; height:100%"  />
        </div>  
        <div class="col-xl-6 col-sm-12">

                <dl class="row" style="text-align: center; background-color: #fff;padding: 19px; margin: 34px;  align-items: center;">
                    <h4 class="col-sm-12">Details</h4>
                    <hr class="col-sm-12" />

                    <dd class="col-sm-12" style="    font-size: 51px;  color: #000; text-transform: uppercase; font-family: none;">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dd class="col-sm-12" style="font-size: 34px;  font-family: cursive;  font-weight: bolder;">
                        $@Html.DisplayFor(model => model.Price)
                    </dd>
                    <dd class="col-sm-12">
                        @Html.DisplayNameFor(model => model.Quantity)  @Html.DisplayFor(model => model.Quantity)
                    </dd>

                    <dd class="col-sm-12">
                        <form asp-action="Index" asp-controller="Customer">
                            <dd class="col-sm-12">
                        <input type="number" min="1" max="@Model.Quantity" name="Quantity" placeholder="Entar Quantity" style=" width: 100%;
                                       border: 1px solid; background-color: #efefef;
                                       border-radius: 6px; padding: 3px;  box-shadow: rgb(17 17 26 / 10%) 0px 4px 16px, rgb(17 17 26 / 5%) 0px 8px 32px;" />
                        <input type="hidden" name="IdHandicraft" value="@Model.IdHandicraft" />
                            </dd>
                    <dd class="col-sm-12" style="">
                        <input type="submit" value="Buy Now" style="    padding: 5px 37px;  background-color: #c0c0c0;  margin: 21px 112px;
                                                        box-shadow: rgb(0 0 0 / 20%) 0px 12px 28px 0px, rgb(0 0 0 / 10%) 0px 2px 4px 0px, rgb(255 255 255 / 5%) 0px 0px 0px 1px inset;" />
                             <dd/>
                         </form>
                    </dd>
                </dl>
        </div>
    </div>
</div>

</body>
<!--===============================================================================================-->
<script src="~/website/vendor/jquery/jquery-3.2.1.min.js"></script>
