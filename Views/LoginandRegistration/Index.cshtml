            crossorigin="anonymous"></script>
        <!-- css link--------------------->
        <link rel="stylesheet" href="~/sign-in-up/style.css">
        <title>Sign In & Sign Up Form</title>
    </head>
    <body>
        <div class="container">
            <div class="back">
                <a href="../index.html">Back</a>
            </div>
            <div class="forms-container">
                <div class="signin-signup">
                    <form asp-action="Login" asp-controller="LoginandRegistration" class="sign-in-form">
                        <h2 class="title">Sign in</h2>
                        <p class="" style="color:red">@ViewBag.error</p>
                        <p style="color:red">@ViewBag.error_in_regstration</p>
                        <div class="input-field">
                            <i class="fa fa-user" aria-hidden="true"></i>
                            <input asp-for="UserName" placeholder="Username" required id="">
                        </div>
                        <div class="input-field">
                            <i class="fa fa-user" aria-hidden="true"></i>
                            <input asp-for="Password" placeholder="Password" required id="">
                        </div>
                        <input type="submit" value="LOGIN" class="btn solid">
                        <p class="social-text">Or Sign in with social platforms</p>
                        <div class="social-media">
                            <a href="#" class="social-icon">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                            <a href="#" class="social-icon">
                                <i class="fab fa-twitter"></i>
                            </a>
                            <a href="#" class="social-icon">
                                <i class="fab fa-google"></i>
                            </a>
                            <a href="#" class="social-icon">
                                <i class="fab fa-linkedin-in"></i>
                            </a>
                        </div>
                    </form>

                    <form asp-action="Create" asp-controller="LoginandRegistration" Add enctype="multipart/form-data" class="sign-up-form">
                        <h2 class="title">Sign up</h2>
                        <p style="color:red">@ViewBag.error_in_regstration</p>
                        <div class="input-field">
                            <i class="fa fa-user" aria-hidden="true"></i>
                            <input asp-for="FName" placeholder="FName" id="" required>
                            <input asp-for="LName" placeholder="LName" id="" required style="position: absolute; left: 50%;height: 100%;">
                   
                            
                        </div>

                        <div class="input-field">
                            <i class="fa fa-music" aria-hidden="true"></i>
                            <input asp-for="UserName" placeholder="UserName" required id="">
                        </div>


                        <div class="input-field">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                            <input asp-for="Email" placeholder="Email" required id="email">
                        </div>    
                        <div class="input-field">
                            <i class="fa fa-image" aria-hidden="true"></i>
                            <input asp-for="ImageFile" placeholder="Image" required id="">
                        </div>
                        <div class="input-field">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                            <input asp-for="Password" placeholder="Password" required id="">
                        </div>


                        <input type="submit" value="Sign up" class="btn solid">
                        <p class="social-text">Or Sign up with social platforms</p>
                        <div class="social-media">
                            <a href="#" class="social-icon">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                            <a href="#" class="social-icon">
                                <i class="fab fa-twitter"></i>
                            </a>
                            <a href="#" class="social-icon">
                                <i class="fab fa-google"></i>
                            </a>
                            <a href="#" class="social-icon">
                                <i class="fab fa-linkedin-in"></i>
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <div class="panels-container">
                <div class="panel left-panel">
                    <div class="content">
                        <h3>New here ?</h3>
                        <p>
                            Lorem ipsum, dolor sit amet consectetur adipisicing elit. Debitis,
                            ex ratione. Aliquid!
                        </p>
                        <button class="btn transparent" id="sign-up-btn">
                            Sign up
                        </button>
                    </div>
                    <img src="~/sign-in-up/img/undraw_maker_launch_re_rq81.svg" class="image" alt="" />
                </div>
                <div class="panel right-panel">
                    <div class="content">
                        <h3>One of us ?</h3>
                        <p>
                            Lorem ipsum dolor sit amet consectetur adipisicing elit. Nostrum
                            laboriosam ad deleniti.
                        </p>
                        <button class="btn transparent" id="sign-in-btn">
                            Sign in
                        </button>
                    </div>
                    <img src="~/sign-in-up/img/undraw_design_process_re_0dhf.svg" class="image" alt="" />
                </div>
            </div>
        </div>
