
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_vendor_Layout1.cshtml";
}

<style>
    .profile {
        box-shadow: rgb(50 50 93 / 25%) 0px 50px 100px -20px, rgb(0 0 0 / 30%) 0px 30px 60px -30px, rgb(10 37 64 / 35%) 0px -2px 6px 0px inset;
        background-color: white;
        padding: 1px 20px;
        border-radius: 60px;
    }
</style>
<div class="container">
    <div class="main-body">
        <!-- /Breadcrumb -->


        <div class="row gutters-sm profile">
            @foreach (var item in @ViewBag.Profits)
            {
                <div class="col-md-4 mb-3" style="margin-top:30px;">
                    <img src=@Url.Content("~/image/" + item.Image)
                     asp-append-version="true" style="border-radius:2%;" width="100%" height="100%" />
                </div>
                <div class="col-md-8">

                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="row">
                                <h3 class="col-sm-12" style=" font-weight: 600; font-family: initial;  text-align: center; letter-spacing: 2px;">Profile Information</h3>
                                <hr  />
                                <div class="col-sm-3">
                                    <h6 class="mb-0">First Name</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @item.FName
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">LName</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @item.LName
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Email</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @item.Email
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">UserName</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @item.UserName
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Password</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @item.Password
                                </div>
                            </div>
                            <hr>
                            <div class="row" style="text-align:right">
                                <div class="col-sm-12">
                                    <a class="btn " style="background-color:#191818;" asp-action="Edit_profile" asp-route-id="@item.Id" target="__blank">Edit</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>

</div>


<style type="text/css">
    body {
        margin-top: 20px;
        color: #1a202c;
        text-align: left;
        background-color: #e2e8f0;
    }

    .main-body {
        padding: 15px;
    }

    .card {
        box-shadow: 0 1px 3px 0 rgba(0,0,0,.1), 0 1px 2px 0 rgba(0,0,0,.06);
    }

    .card {
        position: relative;
        display: flex;
        flex-direction: column;
        min-width: 0;
        word-wrap: break-word;
        background-color: #fff;
        background-clip: border-box;
        border: 0 solid rgba(0,0,0,.125);
        border-radius: .25rem;
    }

    .card-body {
        flex: 1 1 auto;
        min-height: 1px;
        padding: 1rem;
    }

    .gutters-sm {
        margin-right: -8px;
        margin-left: -8px;
    }

        .gutters-sm > .col, .gutters-sm > [class*=col-] {
            padding-right: 8px;
            padding-left: 8px;
        }

    .mb-3, .my-3 {
        margin-bottom: 1rem !important;
    }

    .bg-gray-300 {
        background-color: #e2e8f0;
    }

    .h-100 {
        height: 100% !important;
    }

    .shadow-none {
        box-shadow: none !important;
    }

</style>

